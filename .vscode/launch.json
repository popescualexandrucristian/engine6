    "version": "0.2.0",
    "configurations": [
        {
            "name": "attach win32",
            "type": "cppvsdbg",
            "request": "attach",
            "processId": "${command:pickProcess}"
        },
        {
            "name": "launch win32 debug",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/Debug/engine6.exe",
            //"args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/bin",
            "environment": []
        },
        {
            "name": "launch win32 release",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/Release/engine6.exe",
            //"args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/bin",
            "environment": []
        }

    ]
}